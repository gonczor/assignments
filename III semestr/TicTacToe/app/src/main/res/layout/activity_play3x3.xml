<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play3x3"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.gonczor.tictactoe.play_activities.Play3x3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_3_00"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />
        <Button
            android:id="@+id/button_3_01"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />
        <Button
            android:id="@+id/button_3_02"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_3_10"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />
        <Button
            android:id="@+id/button_3_11"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />
        <Button
            android:id="@+id/button_3_12"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_3_20"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />
        <Button
            android:id="@+id/button_3_21"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />
        <Button
            android:id="@+id/button_3_22"
            android:onClick="onClickSetMarker"
            android:textSize="@dimen/button_text_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/box_size_3x3" />

    </LinearLayout>

    <TextView
        android:id="@+id/timer_window_3x3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="40sp" />

</LinearLayout>
